{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Config for Barbapapazes",
  "extends": [
    "config:recommended",
    "group:allNonMajor",
    ":maintainLockFilesWeekly",
    ":semanticCommitTypeAll(chore)",
    "helpers:pinGitHubActionDigests"
  ],
  "prCreation": "not-pending",
  "meteor": {
    "enabled": false
  },
  "rangeStrategy": "bump",
  "npm": {
    "commitMessageTopic": "{{prettyDepType}} {{depName}}"
  },
  "packageRules": [
    {
      "groupName": "npm packages",
      "groupSlug": "npm",
      "matchDatasources": [
        "npm"
      ]
    },
    {
      "groupName": "github actions",
      "groupSlug": "github-actions",
      "matchDatasources": [
        "github-tags"
      ]
    },
    {
      "groupName": "engines",
      "groupSlug": "engines",
      "matchDepTypes": [
        "engines"
      ]
    },
    {
      "groupName": "package manager",
      "groupSlug": "package-manager",
      "matchPackageNames": [
        "npm",
        "yarn",
        "pnpm"
      ]
    },
    {
      "groupName": "linter and formatter",
      "groupSlug": "linter-and-formatter",
      "matchPackageNames": [
        "eslint",
        "prettier",
        "@antfu/eslint-config"
      ]
    },
    {
      "groupName": "nuxt",
      "groupSlug": "nuxt",
      "matchPackageNames": [
        "nuxt"
      ],
      "matchPackagePatterns": [
        "^@nuxt/",
        "^@nuxthq/"
      ]
    },
    {
      "groupName": "vueuse",
      "groupSlug": "vueuse",
      "matchPackagePatterns": [
        "^@vueuse/"
      ]
    },
    {
      "groupName": "nuxtseo",
      "groupSlug": "nuxtseo",
      "matchPackageNames": [
        "@nuxtseo/module",
        "@nuxtjs/sitemap",
        "@nuxtjs/seo",
        "@nuxtjs/sitemap",
        "nuxt-simple-robots",
        "nuxt-simple-sitemap",
        "nuxt-og-image",
        "nuxt-link-checker",
        "nuxt-seo-experiments",
        "nuxt-schema-org",
        "nuxt-seo-ui",
        "nuxt-site-config"
      ]
    },
    {
      "groupName": "vue",
      "groupSlug": "vue",
      "matchPackageNames": [
        "vue"
      ]
    },
    {
      "groupName": "iconify",
      "groupSlug": "iconify",
      "matchPackagePatterns": [
        "^@iconify/",
        "^@iconify-json/"
      ]
    }
  ]
}
